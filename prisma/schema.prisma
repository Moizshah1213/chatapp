generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String       @id 
  name             String?
  email            String       @unique
  password         String?
  image            String?
  banner           String?
  status           String       @default("ONLINE")
  lastSeen         DateTime     @default(now())
  createdAt        DateTime     @default(now())
  statusPreference String       @default("ONLINE")
  channels         Channel[]
  receivedRequests Friendship[] @relation("ReceivedRequests")
  sentRequests     Friendship[] @relation("SentRequests")
  members          Member[]
  receivedMessages Message[]    @relation("ReceivedMessages")
  sentMessages     Message[]    @relation("SentMessages")
  servers          Server[]
  notifications Notification[] @relation("UserNotifications")

  profiles          Profiles? // One-to-one relation
 
}

model Message {
  id         String    @id @default(uuid())
  content    String
  fileUrl    String?
  fileType   String?
  userId     String
  receiverId String?
  channelId  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  replyToId  String?
  isPinned   Boolean?  @default(false)
  channel    Channel?  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  receiver   User?     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  replyTo    Message?  @relation("ReplyRelation", fields: [replyToId], references: [id])
  replies    Message[] @relation("ReplyRelation")
  user       User      @relation("SentMessages", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([channelId])
 }

model Friendship {
  id         String           @id @default(uuid())
  senderId   String
  receiverId String
  senderUnread    Int      @default(0)
  receiverUnread  Int      @default(0)
  lastMessage   String?  
  lastMessageAt DateTime @default(now())
  status     FriendshipStatus @default(PENDING)
  createdAt  DateTime         @default(now())
  receiver   User             @relation("ReceivedRequests", fields: [receiverId], references: [id])
  sender     User             @relation("SentRequests", fields: [senderId], references: [id])

  @@unique([senderId, receiverId])
 }

model Server {
  id         String    @id @default(uuid())
  name       String
  imageUrl   String
  inviteCode String    @unique @default(uuid())
  profileId  String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  channels   Channel[]
  members    Member[]
  profile    User      @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
 }

model Member {
  id        String     @id @default(uuid())
  role      MemberRole @default(GUEST)
  profileId String
  serverId  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  profile   User       @relation(fields: [profileId], references: [id], onDelete: Cascade)
  server    Server     @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([serverId])
 }

 model Profiles {
  id             String  @id @map("id")
  name           String?
  about          String?
  image          String?
  banner         String?
  pronouns       String?
  primary_color  String? @default("#5865f2")
  accent_color   String? @default("#23a559")
  nameplate      String? @default("default")
  decoration     String? @default("none")
  profile_effect String? @default("none")
  theme          String?  @default("dark")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  user           User    @relation(fields: [id], references: [id], onDelete: Cascade)
  @@map("Profiles")
}

model Channel {
  id        String      @id @default(uuid())
  name      String
  type      ChannelType @default(TEXT)
  serverId  String
  profileId String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  profile   User        @relation(fields: [profileId], references: [id], onDelete: Cascade)
  server    Server      @relation(fields: [serverId], references: [id], onDelete: Cascade)
  messages  Message[]
 }

model Notification {
  id          String   @id @default(cuid())
  userId      String   // Kis ko notification mili
  senderId    String   // Kis ne tag kiya
  type        String   // "MENTION", "SERVER_TAG", "REPLY"
  content     String   // Message ka preview
  serverId    String?  // Agar server ka tag hai
  channelId   String?  // Agar kisi channel mein tag hua
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  user        User     @relation("UserNotifications", fields: [userId], references: [id])
 }

enum MemberRole {
  ADMIN
  MODERATOR
  GUEST
 }

enum ChannelType {
  TEXT
  VOICE
  VIDEO
 }

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
 }
